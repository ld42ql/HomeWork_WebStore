@model LoginViewModel


        <div class="col-sm-4 col-sm-offset-1">
            <div class="login-form">
                <!--login form-->
                <h2>Login to your account</h2>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="ReturnUrl" type="hidden" placeholder="User name" />

                    <input asp-for="UserName" placeholder="User name" />
                    <input asp-for="Password" placeholder="Password" />
                    <span>
                        <label>
                            <input asp-for="RememberMe" type="checkbox" class="checkbox">
                            Keep me signed in
                        </label>
                    </span>
                    <button asp-controller="Account" asp-action="Login" type="submit" class="btn btn-default">Login</button>
                </form>
            </div><!--/login form-->
        </div>

