@model RegisterUserViewModel


        <div class="col-sm-4 col-sm-offset-1">
            <div class="signup-form">
                <!--sign up form-->
                <h2>Регистрация пользователя</h2>
                <form asp-action="Register" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                    <input asp-for="EmailUser" placeholder="@nameof(Model.EmailUser)" />
                    <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                    <input asp-for="ConfirmPassword" placeholder="@nameof(Model.ConfirmPassword)" />
                  
                    <button asp-controller="Account" asp-action="Register" type="submit" class="btn btn-default">
            Зарегистрироваться
        </button>
                </form>
            </div><!--/sign up form-->
        </div>
