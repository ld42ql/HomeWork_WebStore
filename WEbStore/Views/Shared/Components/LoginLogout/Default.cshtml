@if (User.Identity.IsAuthenticated)
{
    <li><a href="#">@User.Identity.Name</a></li>
    <li>
        <form method="post" asp-controller="Account" asp-action="Logout" asp-antiforgery="true">
            <input type="submit" value="Выход" class="btn btn-default" />
        </form>
    </li>
}
else
{
    <li><a asp-controller="Account" asp-action="LoginOrRegister"><i class="fa fa-lock"></i> Вход</a></li>
}
